			</field>
			<field>
				<label>Name Color</label>
				<name>t_name</name>
				<type>text</type>
				<color>1</color>
				<lang>0</lang>
			</field>
			<field>
				<label>Title Color</label>
				<name>t_title</name>
				<type>text</type>
				<color>1</color>
				<lang>0</lang>
			</field>
			<field>
				<label>Link Color</label>
				<name>t_link</name>
				<type>text</type>
				<color>1</color>
				<lang>0</lang>
			</field>
			<field>
				<label>Border Color</label>
				<name>t_border</name>
				<type>text</type>
				<color>1</color>
				<lang>0</lang>
			</field>
		</module>
	</social>
